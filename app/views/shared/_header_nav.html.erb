<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="/"><%= site_title %></a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li><%= link_to "All Posts", posts_path %></li>
          <li><%= link_to 'New', new_post_path %></li>
          <li><%= link_to("Create Account", new_user_path) unless current_user %></li>
        </ul>
        <% if current_user %>
        <ul class="nav">
          <li><%= link_to "My Posts", profile_path %></li>
        </ul>
          <ul class="nav pull-right">
            <li><%= link_to "<i class='icon-fire icon-white'></i> New Pair".html_safe , new_post_path %></li>
            <li><%= link_to "<i class='icon-user icon-white'></i> View Profile".html_safe , current_user %></li>
            <li><%= link_to "<i class='icon-cog icon-white'></i> Edit Profile".html_safe, edit_user_path(current_user.id) %></li>
            <li><%= link_to "<i class='icon-off icon-white'></i> Logout".html_safe, logout_path %></li>
          </ul>
        <% else %>
          <%= form_tag sessions_path, method: :post, class: "navbar-form pull-right" do  %>
            <%= text_field_tag :username, nil, placeholder: "username", class: "span2" %>
            <%= password_field_tag :password, nil,placeholder: "password", class: "span2" %>
            <%= submit_tag "Login", class: "btn btn-inverse" %>
          <% end %>
        <% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
